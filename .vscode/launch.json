{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch gate",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/server/gate/main.go",
            "env": {
                "GATE_LISTEN_ADDR": ":7070",
                "RPC_LISTEN_ADDR":":5000",
                "RPC_ADDR":"10.8.9.1:5000",
                "ETC_ENDPOINTS": "10.8.9.1:2379",
            },
            "debugAdapter": "legacy",
            "dlvFlags": [
                "--check-go-version=false"
            ]
        },
        {
            "name": "Launch game",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/server/game/main.go",
            "env": {
                "RPC_LISTEN_ADDR":":5001", 
                "RPC_ADDR":"10.8.9.1:5001",
                "ETC_ENDPOINTS": "10.8.9.1:2379",
            },
            "debugAdapter": "legacy",
            "dlvFlags": [
                "--check-go-version=false"
            ]
        },
        {
            "name": "Cocos Creator Chrome Debug",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:7456", // Cocos 预览默认端口
            "webRoot": "${workspaceFolder}/othello/assets",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/*",
                "webpack:///src/*": "${webRoot}/*",
                "webpack:///./assets/*": "${webRoot}/*"
            },
            "userDataDir": "${workspaceFolder}/.vscode/chrome-debug",
            "runtimeArgs": [
                "--auto-open-devtools-for-tabs"
            ]
        }
    ]
}